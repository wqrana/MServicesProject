@model POSWebClient.Models.ProductRateModel

<div class="row">
    <div class="offset-md-1 col-md-10">
        <form id="productRateForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="@ViewBag.ProductList">
                    <option value="">Select Product</option>
                </select>               
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="EffectiveRate" class="control-label"></label>
                <input asp-for="EffectiveRate" class="form-control" />
                <span asp-validation-for="EffectiveRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EffectiveDate" class="control-label"></label>
                <input type="text" id="EffectiveDate" name="EffectiveDate" class="form-control" value="@Html.DisplayFor(model => model.EffectiveDate)" />
                <span asp-validation-for="EffectiveDate" class="text-danger"></span>
            </div>
            
        </form>
    </div>
</div>

<div class="offset-md-4 mt-4">
    <button id="btnSaveProductRate" class="btn  btn-primary">Save</button>
    <button id="btnCancel" class="btn btn-danger " data-bs-dismiss="modal" aria-label="Close">Cancel</button>
</div>
      
<script>
    $(document).ready(function () {
        $('input[id*=Date]').each(function () {
            debugger;
            $(this).datepicker({dateFormat: 'yyyy-mm-dd', autoclose: true});
        });
        $("#btnSaveProductRate").click(function () {           
            var formObject = $("#productRateForm").serialize();
            saveRecord(formObject);
        })
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}