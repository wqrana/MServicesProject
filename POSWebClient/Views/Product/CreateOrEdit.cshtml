@model POSWebClient.Models.ProductModel

<div class="row">
    <div class="offset-md-1 col-md-10">
        <form id="productForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />


            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryType" class="control-label"></label>
                <input asp-for="CategoryType" class="form-control" />
                <span asp-validation-for="CategoryType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultDiscountPct" class="control-label"></label>
                <input asp-for="DefaultDiscountPct" class="form-control" />
                <span asp-validation-for="DefaultDiscountPct" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultSalesPrice" class="control-label"></label>
                <input asp-for="DefaultSalesPrice" class="form-control" />
                <span asp-validation-for="DefaultSalesPrice" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div class="offset-md-4 mt-4">
    <button id="btnSaveProduct" class="btn  btn-primary">Save</button>
    <button id="btnCancel" class="btn btn-danger " data-bs-dismiss="modal" aria-label="Close">Cancel</button>
</div>
      
<script>
    $(document).ready(function () {
        $("#btnSaveProduct").click(function () {
            console.log($("#productForm").serialize());
            var formObject = $("#productForm").serialize();
            saveRecord(formObject);
        })
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}